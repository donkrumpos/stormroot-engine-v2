    # - attach wagon_wheel to:<entry[wagonwheel_armor_stand].spawned_entity>
    - flag <server> krizzdos_cannon:<entry[cannon_armor_stand].spawned_entity>
    # - adjust <entry[wagonwheel_armor_stand].spawned_entity> hide_from_players


