    - if <server.flag[krizzdos_wheel_broken].is_spawned.not>:
        - spawn armor_stand[arms=true;equipment=air|air|air|wagon_wheel_h;visible=false] krizzdo_wagonwheel_04 save:wagonwheel_armor_stand_broken
        # - attach wagon_wheel to:<entry[wagonwheel_armor_stand].spawned_entity>
        - flag <server> krizzdos_wheel_broken:<entry[wagonwheel_armor_stand_broken].spawned_entity>

place_krizzdos_bolt:
    type: task
    script:
    - if <location[krizzdos_bolt_location].find_entities[dropped_item].within[1].first.item.script.name> != krizzdos_bolt:
        - drop krizzdos_bolt[flag=krizzdos_bolt] krizzdos_bolt_location

krizzdo_world:
    type: world
    events:
        
        on player picks up krizzdos_bolt:
        # - ratelimit/ex <player> 1s
        - if <player.has_flag[has_krizzdos_bolt].not>:
            - give krizzdos_bolt
            # - fakeitem krizzdos_bolt duration:5m slot:<player.inventory.first_empty>
        - flag <player> has_krizzdos_bolt
        - adjust <player> hide_entity:<context.entity>
        - determine cancelled
        # on player right clicks block with:krizzdos_bolt:
        # - if <player.has_flag[has_krizzdos_bolt]>:
        #     - narrate click
        on player right clicks armor_stand:
        - if <context.entity> == <server.flag[krizzdos_wheel_broken]>:
            - if <player.has_flag[has_krizzdos_bolt]> && <player.item_in_hand.script.name> == krizzdos_bolt:
                - run fix_krizzdos_wheel
                - flag <player> fixed_krizzdos_wheel
                - take krizzdos_bolt
                - determine passively cancelled
            - determine cancelled
        
reset_krizzdo:
    type: task
    script:
    - foreach <server.online_players> as:player:
        - flag <[player]> has_krizzdos_bolt:!
        - flag <[player]> krizzdo_prox_count:!
        - flag <[player]> fixed_krizzdos_wheel:!
        # - adjust <server.flag[krizzdos_wheel_broken]> show_to_players
        # - adjust <server.flag[krizzdos_wheel_fixed]> hide_from_players
        - adjust <[player]> hide_entity:<server.flag[krizzdos_wheel_fixed]>
        - adjust <[player]> show_entity:<server.flag[krizzdos_wheel_broken]>
        - teleport <player> krizzdo_approach

Krizzdo_task_01:
    type: task
    script:
    - narrate "Can you jump in my cannon?"

    - wait 2s
    - cast blindness d:2 amplifier:0 <player>

    - adjust <player> hide_from_players
    - spawn armor_stand[visible=false;gravity=false] krizzdo_cannon_shoot_spot save:krizzdo_cannon_shoot_armorstand
    - define cannonball <entry[krizzdo_cannon_shoot_armorstand].spawned_entity> 
    - adjust <player> spectate:<[cannonball]>
    - adjust <player> gamemode:spectator
    - wait 1s
    - foreach <location[krizzdo_cannon_lookspot_03].points_between[<location[krizzdo_cannon_lookspot_01]>]> as:point:
        - look <[cannonball]> <[point]>
        - if <[loop_index].is_odd>:
            - wait 1t
    - foreach <location[krizzdo_cannon_lookspot_01].points_between[<location[krizzdo_cannon_lookspot_03]>]> as:point:
        - look <[cannonball]> <[point]>
        - if <[loop_index].is_odd>:
            - wait 1t
    - narrate "Let me get this sucker lined up . . ." targets:<player>
    - foreach <location[krizzdo_cannon_lookspot_03].points_between[<location[krizzdo_cannon_lookspot_02]>]> as:point2:
        - look <[cannonball]> <[point2]>
        - if <[loop_index].is_odd>:
            - wait 1t
    - narrate "One inch off and you're kablooey." targets:<player>
    - look <[cannonball]> krizzdo_cannon_lookspot_02
    # - foreach <location[krizzdo_cannon_lookspot_02].points_between[<location[krizzdo_cannon_lookspot_03]>]> as:point3:
    #     - look <[cannonball]> <[point3]>
    #     - if <[loop_index].is_odd>:
    #         - wait 1t
    - wait 1s
    - narrate "There. . .  Ready?" targets:<player>
    - narrate "3!" targets:<player>
    - wait 1s
    - narrate "2!" targets:<player>
    - wait 1s
    - narrate "1!" targets:<player>
    - flag <player> krizzdo_launched
    - wait 2s
    - playeffect effect:explosion_large at:krizzdo_cannon_explosion visibility:10 quantity:100 targets:<player>
    - playeffect effect:CAMPFIRE_SIGNAL_SMOKE at:krizzdo_cannon_explosion visibility:10 quantity:100 targets:<player>
    - playsound <player> sound:ENTITY_GENERIC_EXPLODE
    # - wait 1s
    
    # - define distance <location[krizzdo_cannon_shoot_spot].points_between[<location[krizzdo_cannon_lookspot_03]>].size.div[2]>
    - foreach <location[krizzdo_cannon_shoot_spot].points_between[<location[krizzdo_cannon_lookspot_02]>]> as:point4:
        # - if <[loop_index]> == <[distance]>:
        #     - teleport <player> krizzdo_cannon_land_spot
        # - if <[loop_index].is_odd>:
        #     - look <[cannonball]> krizzdo_cannon_land_spot
        
        - teleport <player> <[point4]>
        - teleport <[cannonball]> <[point4]>
        - look <[cannonball]> krizzdo_cannon_land_spot
        - if <[loop_index].is_odd>:
            - wait 1t
    
    # - teleport <player> krizzdo_cannon_land_spot
    # - wait 1s
    # - adjust <player> spectate:<[cannonball]>
    # - look <[cannonball]> krizzdo_cannon_land_spot
    # - foreach <location[krizzdo_cannon_lookspot_halfway].points_between[<location[krizzdo_cannon_lookspot_03]>]> as:point5:
    #     - look <[cannonball]> krizzdo_cannon_land_spot
    #     - teleport <player> <[point5]>
    #     - teleport <[cannonball]> <[point5]>
    #     - wait 1t
        
    # - look <entry[krizzdo_cannon_shoot_armorstand].spawned_entity> krizzdo_cannon_lookspot_02
    # - look <entry[krizzdo_cannon_shoot_armorstand].spawned_entity> krizzdo_cannon_lookspot_03
    - adjust <[cannonball]> gravity:true
    # - wait 5s
    - wait 1s
    - foreach <location[krizzdo_cannon_land_spot].points_between[<location[pewter_spot]>]> as:point6:
        - look <[cannonball]> <[point6]>
        - wait 2t
    
    - adjust <player> spectate:<player>
    - adjust <player> show_to_players
    
    
    - remove <entry[krizzdo_cannon_shoot_armorstand].spawned_entity>
    - teleport <player> krizzdo_cannon_land_spot
    - look <player> pewter_spot
    - adjust <player> gamemode:adventure

Krizzdo_task_02:
    type: task
    script:
    - define krizzdo_npc <player.location.find_npcs_within[100].filter[nickname.is[==].to[krizzdo]].filter[is_spawned].first>

    - narrate "<&color[#6993e2]><&font[steamfront:comicbook4]><[krizzdo_npc].name><&color[#596c8e]><&font[steamfront:comicbook4]> says: <&r>" targets:<player>
    - narrate "Hey, not everyone wants to be friends with Krizzdo the Amazing Demolitions Wizard." targets:<player>
    - wait 2s
    - narrate "You can find Bardtown up that path." targets:<player>


krizzdo_personality:
    type: data
    character_data:
        informal_terms_of_address: 
            - "chum"
            - "bub"
            - "pal"
            - "buddy"
        temperament: "sarcastic, outgoing, and charismatic, with a hint of streetwise cynicism."
        mannerisms: "Krizzdo has a habit of absentmindedly whistling tunes as he goes about his day. He also often licks objects as if to gauge their worth, and he pockets small souvenirs from his travels."
        focused_demeanor: "When it comes to his tinkering projects or performing magic tricks, Krizzdo adopts a focused demeanor, channeling all his attention and energy into the task at hand."
        careful_speech: "Krizzdo's speech is careful and deliberate, with each word chosen for maximum impact. He speaks with a hint of streetwise charm, peppering his sentences with colorful metaphors and witty banter."
        occasional_displays_of_determination: "In moments of challenge or adversity, Krizzdo displays a remarkable determination to overcome obstacles and achieve his goals, often surprising those around him with his resilience and tenacity."
        nostalgic_expressions: "Krizzdo lacks nostalgia, always looking forward to new adventures and opportunities rather than dwelling on the past. His focus is firmly set on the future, driving him to explore new lands, invent new contraptions, and entertain audiences with his magic tricks and storytelling."
        hometown: "Gozon"
        educational_background: "Krizzdo's education was primarily informal, gained through his experiences growing up on the streets of Gozon and his self-directed pursuit of knowledge through tinkering and exploration."
        intelligence: "Krizzdo is highly intelligent, with a natural knack for problem-solving and inventiveness. His street smarts and cunning wit make him adept at navigating a variety of situations."
        self-esteem: "Despite occasional setbacks, Krizzdo possesses a healthy sense of self-esteem, bolstered by his accomplishments and the admiration of those who appreciate his talents."
        hobbies: "Tinkering with gadgets and machinery, performing magic tricks, collecting shiny objects, and exploring new places."
        skills_talents: "Tinkering, magic tricks, persuasion, storytelling, and navigating the Long Sea."
        loves: "Shiny objects, tinkering with gadgets, performing for an audience, and exploring new lands."
        morals_virtues: "Krizzdo values creativity, resourcefulness, and kindness towards others. He believes in the power of laughter and magic to bring joy to the world."
        phobias_fears: "Krizzdo harbors a fear of failure and rejection, stemming from his desire to prove himself as a worthy magician and gain acceptance from the performers of Bardtown."
        angered_by: "Krizzdo is angered by injustice and dishonesty, especially when it affects those who are less fortunate."
        pet_peeves: "Krizzdo's pet peeves include arrogance, narrow-mindedness, and anyone who underestimates his abilities."
        obsessed_with: "Krizzdo is obsessed with tinkering and inventing new contraptions for his Wonderwagon, as well as collecting shiny objects and exploring new lands."
        routines: "Krizzdo's routines involve tending to his Wonderwagon, practicing his magic tricks, and seeking out new adventures across the Long Sea."
        bad_habits: "Krizzdo's bad habits include occasionally biting off more than he can chew and being overly optimistic about his abilities."
        desires: "Krizzdo desires acceptance and recognition from the performers of Bardtown, as well as the opportunity to showcase his talents on their stages."
        flaws: "Krizzdo's flaws include a tendency towards overconfidence and a penchant for bending the truth to suit his own purposes."
        quirks: "In addition to his habit of licking objects and pocketing souvenirs, Krizzdo has a fascination with antique clocks and superstitions."
        favorite_sayings:
            - "Life's a scrap heap, ain't it? Every twist and turn's a chance to snag somethin' shiny before the rats do."
            - "A tale without a twist is like a broken lock - useless and ripe for pickin', my gutter rats."
            - "When the world throws ya a curveball, you snatch it, twist it, and throw it back with a cackle."
            - "Adventure's the fuel for the fire, my grease monkeys. And let me tell ya, I like me flames extra hot!"
            - "In a world full o' locked doors, be the one with the skeleton key... and a few tricks up yer sleeve to make 'em squeal, savvy?"
            - "Dreams are the breadcrumbs of madness, leadin' us down the rabbit hole to our next big haul, arr!"
            - "Life's a stage, and we're all just players in the twisted carnival. So why not give 'em a freak show they'll never forget, eh?"
            - "When life gives ya lemons, me hearties, you squeeze 'em dry and sell the juice for a pretty penny."
            - "Every setback's just a setup for a grand heist, my mates! Keep yer wits about ya and yer knives sharp!"
            - "Don't be lettin' the doubters get ya down, lads! There's always another mark to be had!"
        disabilities: "His eyesight is diminishing"
        secrets:
        - "Krizzdo's real name isn't Krizzdo at all. He adopted the moniker after fleeing his goblin tribe to start a new life, leaving behind his true identity and any ties to his past."
        - "Behind his charismatic facade, Krizzdo harbors a deep-seated resentment towards Bardtown's leading bards, blaming them for his banishment from the city's stages. He secretly dreams of sabotaging their performances and reclaiming his rightful place in the spotlight."
        - "Krizzdo's Wonderwagon isn't just a vehicle for his travels - it's also a mobile arsenal of stolen goods and illicit contraband. Hidden beneath its colorful exterior are hidden compartments filled with treasures pilfered from unsuspecting travelers and rival traders."
        - "Despite his outward bravado, Krizzdo suffers from crippling self-doubt and imposter syndrome, constantly fearing that one day, the world will see through his charming facade and realize he's nothing but a fraud."
        - "Krizzdo's knack for storytelling and sleight-of-hand isn't just a talent - it's a carefully honed skill acquired through years of manipulation and deceit. He's not above using his charms to manipulate others for his own gain, spinning elaborate tales to deceive and swindle those around him."
        regrets: "Krizzdo regrets the incident that led to his banishment from Bardtown's stages, and he secretly longs for the chance to redeem himself in the eyes of its performers."
        accomplishments: "Krizzdo's accomplishments include building his Wonderwagon from scratch, inventing numerous gadgets and contraptions, and earning a reputation as a skilled magician and storyteller across the Long Sea."
