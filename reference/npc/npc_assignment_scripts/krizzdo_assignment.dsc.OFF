krizzdo_assignment:
    type: assignment
    debug: false
    actions:
        on assignment:
        - trigger name:click state:true
        - trigger name:chat state:true
        - trigger name:proximity state:true radius:16
    interact scripts:
    - krizzdo_interact

    default constants:
        appearance1: "<npc.name>'lives in the wild but seems mysterious."
        appearance2: "He has an odd stare that seems to look past you and he mumbles gibberish once and awhile."
        appearance3: "You sense that <npc.name> has been out on this island far too long and it is affecting his mental and social abilities."
        appearance4: "You feel as though <npc.name> is much more important than his lowly appearance."
        appearance5: "Even though <npc.name> has been malnourished and sometimes speaks nonsense, you realize he was once a great man, which comes through in his keen eyes, and occassional educated speech."
        personality: krizzdo_personality


krizzdo_interact:
    type: interact
    steps:
        1:
            proximity trigger:
                entry:
                    script:
                    - define wheel_fixed <server.flag[krizzdos_wheel_fixed]>
                    - define wheel_broken <server.flag[krizzdos_wheel_broken]>
                    - if <player.has_flag[has_krizzdos_bolt].not>:
                        - run place_krizzdos_bolt
                    - else:
                        - inject description_inject_task
                        - narrate "Yahoo, you find a missing bolt! Can you fix my wheel now?"
                    - execute as_server "npc skin --url https://minesk.in/22896f4c606c4cbf8e326814f4f9c7a1 --id <npc.id>"
                    - if <player.has_flag[<npc.name>_prox_count].not> || <player.flag[<npc.name>_prox_count]> == 0:
                        - inject description_inject_task
                        - random:
                            - narrate "hrrrmm, the wind blows in another mortal from far off lands. Can you help dearest traveler. I can make it worth your while." targets:<player>
                            - narrate "ho hum, I see another one of you has been conjured by Deluvia. hehe. Can you help a fellow mortal in need?" targets:<player>
                            - narrate "ah um, a fellow ingenuitiveer. I'm over here. I seem to have broken my wagon over this rough beach. Help?" targets:<player>
                        - wait 2s
                        - repeat 6:
                            - if <player.location.distance[<npc.location>]> <= 3:
                                - narrate "Hey pal. you found me." targets:<player>
                                - repeat stop
                            - if <player.location.distance[<npc.location>]> <= 6  && <player.location.facing[<npc.location>]>:
                                - narrate "  hotter!" targets:<player>
                            - else if <player.location.distance[<npc.location>]> < 10  && <player.location.distance[<npc.location>]> > 6:
                                - if <player.location.facing[<npc.location>]>:
                                    - narrate "  getting warmer. . ." targets:<player>
                                - else:
                                    - narrate "  getting cooler. . ." targets:<player>
                            - else if <player.location.facing[<npc.location>].not>:
                                - narrate "  colder. . ." targets:<player>
                            # - narrate <element[10].sub[<[value]>]>
                            - wait 2s
                            - if <player.location.distance[<npc.location>]> >= 15 && <player.location.facing[<npc.location>].not>:
                                - narrate "Freezing! Have a good time in Bardtown pal. Thanks for nuthins." targets:<player>
                                - repeat stop
                        - wait 3s
                        - narrate "Okay the deal is, my wagon wheel is broken here." targets:<player>
                        - narrate "Can you find a bolt for it lying around here? If you can and repair my wheel, I, <gold>Krizzdo the Magnificent<&r>, at your service, will give you the show of your life, better than anything that can be seen across all The Long Sea" targets:<player>
                    - flag <player> <npc.name>_prox_count:++
                            
                            
        
            click trigger:
                script:
                - if <player.has_flag[has_krizzdos_bolt].not>:
                    - run place_krizzdos_bolt
                - if <player.has_flag[fixed_krizzdos_wheel]>:
                    - ratelimit <player> 10s
                    - inject description_inject_task
                    - random:
                        - narrate "I'm grateful to you for fixing my wheel." targets:<player>
                        - narrate "I hope to get my new act together and I will reserve you front row seats." targets:<player>
                        - narrate "We'll meet again, I'm sure" targets:<player>
                        - narrate "Maybe I'll see you at some of my other stops around The Long Sea." targets:<player>
                        - narrate "I'll have more to show you later." targets:<player>
                        - narrate "How did you like Bardtown? They don't like me." targets:<player>
                        - narrate "If you need to learn more about tinkering or the arts of explosions, hit me up later." targets:<player>
                        - narrate "<italic>Pop goes the weasel<&r> is one of my favorite tunes." targets:<player>
                        - narrate "This is close as I get to Bardtown, so I might hit you up later for some rumors." targets:<player>
                        - narrate "If I can ever afford an assistant, I'll look you up." targets:<player>
              

                - else:
                    - inject description_inject_task
                    - random:
                        - narrate "Hey bub, you gonna help me or not?" targets:<player>
                        - narrate "I still can't find my glasses, er I mean my bolt." targets:<player>
                        - narrate "dangnab my foggy goggles, I can't find the bolt for this broken wheel." targets:<player>
                        - narrate "My wagon wheels can't make it over this rouch beach." targets:<player>
                        - narrate "Any chance that you can find my lost wheel bolt?" targets:<player>
                    - zap 1
        #     chat trigger:
        #         1:
        #             trigger: <&7>/1/. /Yes/, where am I?
        #             script:
        #             - inject krizzdo_help_1_task
                    
        #         2:
        #             trigger: <&7>/2/. /What/ is the /Song Tide/ /archipelago/?
        #             script:
        #             script:
        #             - inject krizzdo_help_2_task
        #             # 
        #             # - narrate format:npcchat "I trust you will be well."
        #             # 
        #             # - zap 1
            chat trigger:
                1:
                    trigger: <&7>/1/. /Yes/, help me get to Bardtown.
                    script:
                    - run <npc.name>_task_01
                1:
                    trigger: <&7>/2/. /No/, I don't really trust you.
                    script:
                    - run <npc.name>_task_02
       

fix_krizzdos_wheel:
    type: task
    script:
    - adjust <player> show_entity:<server.flag[krizzdos_wheel_fixed]>
    - adjust <player> hide_entity:<server.flag[krizzdos_wheel_broken]>
    - define krizzdo_npc <player.location.find_npcs_within[100].filter[nickname.is[==].to[krizzdo]].filter[is_spawned].first>

    - narrate "<&color[#6993e2]><&font[steamfront:comicbook4]><[krizzdo_npc].name><&color[#596c8e]><&font[steamfront:comicbook4]> says: <&r>" targets:<player>
    - if <player.has_flag[skill.skills.tinkering.level]> || <player.flag[skill.skills.tinkering.level]> < 12
    - flag <player> skill.skills.tinkering.level:+:1
    - narrate format:game_message "Your tinkering raises by 1. Type <element[/skills].bold> to see your skills." targets:<player>
    - narrate "Heyyo! You did it!" targets:<player>
    - wait 2s
    - narrate "You are on your way to become a tinkerer afterall." targets:<player>
    - wait 2s
    - narrate "Now to help you get to Bardtown in real fashion." targets:<player>
    - wait 2s
    - narrate "Do you trust Krizzdo the Magnificent?"
    - clickable krizzdo_task_01 save:krizzdo_clickable_01 until:15s usages:1 for:<player>
    - clickable krizzdo_task_02 save:krizzdo_clickable_02 until:15s usages:1 for:<player>
 

    - narrate  "<element[<&hover[Click to say this to Krizzo.]><&8><&lb><&color[#00cb43]><&sp><&sp><&E>1. <&B>Yes, I will trust you to get me to Bardtown.<&8><&rb><&end_hover>].on_click[<entry[krizzdo_clickable_01].command>]>" target:<player>
    - narrate  "<element[<&hover[Click to say this to Krizzo.]><&8><&lb><&color[#00cb43]><&sp><&sp><&E>2. <&B>No Thank you..<&8><&rb><&end_hover>].on_click[<entry[krizzdo_clickable_02].command>]>" target:<player>
    

reset_krizzdos_wagon_wheels:
    type: task
    script:
    - run place_krizzdos_wagonwheel_01
    - run place_krizzdos_wagonwheel_02
    - run place_krizzdos_wagonwheel_03
    - run place_krizzdos_wagonwheel_04
    - run place_krizzdos_broken_wagonwheel
    


place_krizzdo_cannon:
