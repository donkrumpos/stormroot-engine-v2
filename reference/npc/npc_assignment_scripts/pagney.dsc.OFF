pagney_interact:
  type: interact
  steps:
    1:
      click trigger:
        script:
        - narrate "<npc.name>: <&color[<color[173,189,208]>]>Oh good someone's here to save us."
        - if <player.has_flag[party]>:
          - narrate "<&color[<color[173,189,208]>]>You and your party should head into town, up this path. Speak with <&color[<color[222,255,37]>]>Athelal<&color[<color[173,189,208]>]>, the herbalist."
        - else:
          - narrate "<&color[<color[173,189,208]>]>Please head into town, up this path. Speak with <&color[<color[222,255,37]>]>Athelal<&color[<color[173,189,208]>]>, the herbalist."