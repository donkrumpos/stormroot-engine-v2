sodhe_world:
    type: world
    debug: false
    events:
        # on sodhe dies:
        
        on sodhe explodes:
        
        - foreach <context.entity.location.find_players_within[4]> as:target:
            - hurt <util.random.int[0].to[3]> <[target]>
            - if <util.random.int[0].to[11]> == 11:
                - hurt <util.random.int[9].to[13]> <[target]>
            - repeat <util.random.int[0].to[3]>:
                - wait 5t
                - run spawn_mob_task def:sodhe|<[target]>
        - remove <context.entity.flag[mob.custom_model]>
        - determine no_drops
        