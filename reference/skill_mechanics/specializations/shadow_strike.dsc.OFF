shadow_strike_toggle_command:
    type: command
    name: shadow_strike
    aliases:
        - shadow
        - shs
    script:
    - if <player.has_flag[skill.specializations.shadow_strike]>:
      
    
        - if <player.has_flag[shadow_strike]>:
            - flag <player> shadow_strike:!
            - narrate  format:game_message "Shadow Strike toggled off."
        - else:
            - flag <player> shadow_strike
            - narrate  format:game_message  "Shadow Strike toggled on."